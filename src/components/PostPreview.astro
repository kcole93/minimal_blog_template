---
import type { CollectionEntry } from 'astro:content'
interface Props {
  post: CollectionEntry<'blog'>
}

const { post } = Astro.props
---

<article
  class='border-4 border-black dark:border-gray-700 bg-white dark:bg-gray-900 p-4 relative transition duration-500 transform hover:-translate-y-1 hover:shadow-xl hover:border-gray-900 dark:text-white'
>
  <div class='absolute inset-0 bg-black dark:bg-gray-700 shadow-offset'></div>
  <div class='relative'>
    <h2 class='text-2xl font-bold text-white dark:text-gray-300 mb-2'>
      <a
        href={`/blog/${post.slug}`}
        class='hover:text-gray-300 dark:hover:text-gray-500'
        >{post.data.title}</a
      >
    </h2>
    <p class='text-white dark:text-gray-300'>{post.data.description}</p>
  </div>
</article>

<style>
  .shadow-offset {
    transform: translate(8px, 8px);
  }
</style>
